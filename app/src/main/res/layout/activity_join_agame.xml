<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#006000"
    tools:context="com.anderson.chris.quickwar.JoinAGame">


    <TextView
        android:id="@+id/txtJoinAGameLabel"
        android:layout_width="332dp"
        android:layout_height="120dp"
        android:layout_marginTop="68dp"
        android:text="Enter your 4-digit unique game ID (This can found on your tablet/hosting device)"
        android:textAlignment="center"
        android:textColor="@color/authui_inputTextColor"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnConnectToGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Game"
        android:layout_marginTop="67dp"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.052" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="216dp"
        android:layout_height="54dp"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtJoinAGameLabel">

        <EditText
            android:id="@+id/txtUserInputGameID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:imeOptions="actionDone" />

    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>
